{% extends 'base.html.twig' %}

{% block title %}Welcome to PDFpal!{% endblock %}

{% block body %}
    {{ include('parts/header.html.twig') }}
    <section class="flex flex-col justify-center items-center h-[86vh] m-3 rounded-3xl bg-gradient-to-t from-blue-600 via-violet-700 to-fuchsia-800">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="flex flex-col gap-12 items-center text-center">
            <div class="flex flex-col gap-5 items-center text-center">
                <h1 class="text-6xl font-black text-white">Welcome to PDFpal!</h1>
                <h2 class="text-3xl font-bold text-white">Your PDF conversion companion.</h2>
            </div>
            <div class="flex gap-5">
                <a class="btn" href="{{ path('html_to_pdf') }}">HTML to PDF<i data-lucide="arrow-right"></i></a><a class="btn" href="{{ path('url_to_pdf') }}">URL to PDF<i data-lucide="arrow-right"></i></a>
            </div>
        </div>
    </section>
{% endblock %}
